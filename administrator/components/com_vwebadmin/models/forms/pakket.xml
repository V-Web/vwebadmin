<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="package_name" type="text" filter="safehtml" required="true" label="COM_VWEBADMIN_FORM_LBL_PAKKET_PACKAGE_NAME" description="COM_VWEBADMIN_FORM_DESC_PAKKET_PACKAGE_NAME" hint="COM_VWEBADMIN_FORM_LBL_PAKKET_PACKAGE_NAME"/>
    <field name="package_price" type="text" filter="safehtml" required="true" label="COM_VWEBADMIN_FORM_LBL_PAKKET_PACKAGE_PRICE" description="COM_VWEBADMIN_FORM_DESC_PAKKET_PACKAGE_PRICE" hint="COM_VWEBADMIN_FORM_LBL_PAKKET_PACKAGE_PRICE"/>
    <field name="package_description" type="textarea" filter="safehtml" label="COM_VWEBADMIN_FORM_LBL_PAKKET_PACKAGE_DESCRIPTION" description="COM_VWEBADMIN_FORM_DESC_PAKKET_PACKAGE_DESCRIPTION" hint="COM_VWEBADMIN_FORM_LBL_PAKKET_PACKAGE_DESCRIPTION"/>
    <field name="package_link" type="url" validate="url" label="COM_VWEBADMIN_FORM_LBL_PAKKET_PACKAGE_LINK" description="COM_VWEBADMIN_FORM_DESC_PAKKET_PACKAGE_LINK" hint="COM_VWEBADMIN_FORM_LBL_PAKKET_PACKAGE_LINK"/>
    <field name="bandwidth" type="text" filter="safehtml" label="COM_VWEBADMIN_FORM_LBL_PAKKET_BANDWIDTH" description="COM_VWEBADMIN_FORM_DESC_PAKKET_BANDWIDTH" hint="COM_VWEBADMIN_FORM_LBL_PAKKET_BANDWIDTH"/>
    <field name="storage" type="text" filter="safehtml" label="COM_VWEBADMIN_FORM_LBL_PAKKET_STORAGE" description="COM_VWEBADMIN_FORM_DESC_PAKKET_STORAGE" hint="COM_VWEBADMIN_FORM_LBL_PAKKET_STORAGE"/>
    <field name="ordering"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="COM_VWEBADMIN_FORM_LBL_PAKKET_CREATED_BY" description="COM_VWEBADMIN_FORM_DESC_PAKKET_CREATED_BY" hidden="true" hint="COM_VWEBADMIN_FORM_LBL_PAKKET_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="COM_VWEBADMIN_FORM_LBL_PAKKET_MODIFIED_BY" description="COM_VWEBADMIN_FORM_DESC_PAKKET_MODIFIED_BY" hidden="true" hint="COM_VWEBADMIN_FORM_LBL_PAKKET_MODIFIED_BY"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
